@model UniEBoard.Service.Models.TopicPostViewModel

@{
    Model.Body = @Html.Encode(Model.Body);
}

@using (Html.BeginForm("CreateTopicPost", "Discussion", FormMethod.Post, new { id = Model.Id.ToString() })) 
{
    
@Html.ValidationSummary(true)


    
<div class="row">
    <div class="large-12 medium-12 columns">
        <h3>Your Post</h3>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Body)
            @Html.ValidationMessageFor(model => model.Body)
        </div>

        <p>
            <input type="submit" value="Post" class="button small" />
        </p>
    </div>
</div>
}
