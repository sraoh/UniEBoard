@model IEnumerable<UniEBoard.Service.Models.Quizzes.QuestionViewModel>

<form class="custom">
    <p class="message-success">@ViewBag.StatusMessage</p>
    <table class="full responsive grid tableRowDnD" data-source=@Url.Action("UpdateOrder") data-type="questions">
	    <thead>
	    <tr>									      
		    <th>Question</th>
		    <th>Type</th>
		    <th>Total Points</th>
            <th>Actions</th>
	    </tr>
	    </thead>
	    <tbody>
        @if (Model != null)
        {
            foreach (var question in (IEnumerable<UniEBoard.Service.Models.Quizzes.QuestionViewModel>)Model)
            {
                <tr id="@question.Id" data-sortOrder="@question.SortOrder">									      
				    <td><p>@question.Name</p></td>
				    <td><p>@question.QuestionTypeText</p></td>
				    <td><p>@question.TotalPoints</p></td>   
                    <td class="actions">
                        <a href='@Url.Action("QuizQuestionEdit", "Teacher", new { questionId = question.Id })'><i class="icon-list-alt"></i></a>
                        <a target="_self" href='@Url.Action("RemoveQuizQuestion", "Teacher", new { questionId = question.Id })' onclick="return confirm('Are you sure you wish to delete this item?');"><i class="icon-remove"></i></a>
                    </td>                           
                </tr>
            }
        }
	    </tbody>
    </table>
</form>