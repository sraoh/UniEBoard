@model UniEBoard.Service.Models.CourseViewModel
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("CreateCourse", "Teacher", FormMethod.Post, new { @class = "custom" }))
    {
        <div class="panel">
			<div class="row">
				<div class="large-6 columns">
                    @Html.LabelFor(m => m.Title)    
                    @Html.TextBoxFor(m => m.Title, new { placeholder = "Enter course title..." })
				</div>
				<div class="large-6 columns">
                    @Html.LabelFor(m => m.Length)    
                    @Html.TextBoxFor(m => m.Length, new { placeholder = "Enter  length of course..." })
                    
				</div>
				<!--<div class="large-3 columns">
					<label for="New-Owner">Owner</label>
                    <input type="text" id="New-Owner" name="New-Owner" 
                    class="autocomplete"
                    placeholder="Enter the owner of the course..."
                    data-source=@Url.Action("AutoCompleteUsers", "Teacher")
                    data-sourceId="Test" />
                    
				</div>-->
			</div>
			<div class="row">
				<div class="large-6 columns">
                    @Html.LabelFor(m => m.Overview)    
                    @Html.TextAreaFor(m => m.Overview, new { placeholder = "Enter  course description..." })
				</div>
				<div class="large-6 columns">          
                    @Html.LabelFor(m => m.DepartmentName)  
                    @Html.DropDownListFor(m => m.DepartmentId, (IEnumerable<SelectListItem>)ViewData["DepartmentList"], "Select department...")
                    
				</div>
				<!--<div class="large-3 columns">
					<label for="New-Template">Template</label>
					<select name="New-Template" class="medium">
				<option selected>Standard</option>
			</select>
			</div>-->
		</div>
        <div class="row">
			<div class="large-3 columns">
				<label for="from">Publish From</label>
				<div class="row collapse">
			        <div class="small-10 columns">
                        @Html.TextBoxFor(u => u.PublishFrom, new { placeholder = "Enter Publish From...", @class = "datetimepicker vblank", type="date" })
			        </div>
			        <div class="small-2 columns">
				        <a href="#" data-focus-id="PublishFrom" class="button prefix"><i class="icon-calendar"></i></a>
			        </div>
			    </div>	
			</div>
			<div class="large-3 columns">
				<label for="to">Publish To</label>
				<div class="row collapse">
			<div class="small-10 columns">
				@Html.TextBoxFor(u => u.PublishTo, new { placeholder = "Enter Publish To...", @class = "datetimepicker vblank" })
			</div>
			<div class="small-2 columns">
				<a href="#" data-focus-id="PublishTo" class="button prefix"><i class="icon-calendar"></i></a>
			</div>
			</div>	
			</div>																	
			<div class="large-6 columns">
				
			</div>									      
	    </div>
        <div class="row">
            <div class="large-12 columns">
                <input type="submit" value="Create" class="fl button radius tiny" />
            </div>
        </div>
   </div>
    }
}
